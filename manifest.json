{
  "manifest_version": 3,
  "name": "TypeMagic - AI Text Corrector",
  "version": "1.3.0",
  "description": "Instant AI text correction. Press Cmd+Option+T (Mac) or Ctrl+Alt+T (Windows/Linux) to fix spelling, grammar, and formatting anywhere on the web.",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
